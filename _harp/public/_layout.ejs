<% var pages = public.pages._data;
  var page = null;
  for(var i = 0; i < pages.length; i++){
    if(pages[i].slug == current.source){
      page = pages[i];
    }
  }
%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cuberis Development Standards</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,600|PT+Mono" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="<%= base_url %>/assets/css/app.css">
    <link rel="icon" href="<%= base_url %>/assets/img/favicon.png">
  </head>
  <body class="page-<%- current.path[0] %>">
<!--
