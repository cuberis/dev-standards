  \:\ \/_/\\:\ \:\ \\::  _  \ \\::___\/_\: __ `\ \  _\::\ \__\_::._\:\
   \:\_\ \ \\:\_\:\ \\::(_)  \ \\:\____/\\ \ `\ \ \/__\::\__/\ /____\:\
    \_____\/ \_____\/ \_______\/ \_____\/ \_\/ \_\/\________\/ \_____\/
-->
    <header class="main-header"></header>
    <div class="container-fluid">
      <div class="row-fluid">
        <aside class="col-sm-4 col left-col">
          <nav class="bar-nav">
            <a class="logo" href="https://cuberis.com" title="Cuberis"><img src="<%= base_url %>/assets/img/cuberis_logo.png" alt="Cuberis"></a>
            <h3 class="site-title">Development Standards</h3>
            <ul>
              <li>
                <a href="/">Home</a>
              </li>
          <% var pages = public.pages._data;
             for(var k = 0; k < pages.length; k++){ %>
            <% if(current.source === pages[k].slug){ %>
              <li class="active">
                <a href="<%= base_url %>/pages/<%= pages[k].slug %>"><%= pages[k].title %></a>
              </li>
            <% } else { %>
              <li>
                <a href="<%= base_url %>/pages/<%= pages[k].slug %>"><%= pages[k].title %></a>
              </li>
            <% } %>
          <% } %>
            </ul>
          </nav>
        </aside>
        <main class="col-sm-8 col-sm-offset-4 col right-col">
          <% if(page && page.subnav){ %>
            <%- partial('_partials/subnav', {subnav: page.subnav}) %>
          <% } %>

          <% if(page && page.title){ %>
            <h1 class="page-title"><%= page.title %></h1>
          <% } else if(current.path[0] === 'index') { %>
            <h1 class="page-title">Cuberis Development Standards</h1>
          <% } else if(current.path[0] === '404') { %>
            <h1 class="page-title">Page Not Found</h1>
          <% } %>

          <%- yield %>

        </main>
      </div>
    </div>

    <footer class="main-footer">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
          </div>
        </div>
      </div>
    </footer>
    <script src="<%= base_url %>/assets/js/nilla.js"></script>
    <script src="<%= base_url %>/assets/js/app.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>
  </body>
</html>
